# Supabase (if you already use it; leave blank here)
SUPABASE_URL=
SUPABASE_JWT_SECRET=

# LLM selection
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=

# Policy
AI_CONFIRMATION_POLICY=strict
DEFAULT_TIMEZONE=America/Los_Angeles

# --- Phase 0/1 flags (new) ---
# Local dev auth mode:
# If AUTH_REQUIRED=true, real HS256 bearer is required even if AUTH_BYPASS is set.
AUTH_BYPASS=true
AUTH_REQUIRED=false

# Durable mock store backend selection
# Options: memory | sqlite
CAL_STORE_BACKEND=sqlite
CAL_DB_PATH=server/data/app.db