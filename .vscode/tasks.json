{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: first setup (venv + pip)",
      "type": "shell",
      "command": "cd server && test -d .venv || python3 -m venv .venv && source .venv/bin/activate && python3 -m pip install --upgrade pip && python3 -m pip install -r requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "backend: run (uvicorn with .env)",
      "type": "shell",
      "command": "cd server && source .venv/bin/activate && set -a; [ -f .env ] && source .env || true; set +a; uvicorn app:app --port 8000",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated", "group": "backend" }
    },
    {
      "label": "backend: kill :8000",
      "type": "shell",
      "command": "lsof -ti:8000 | xargs kill -9 2>/dev/null || true",
      "problemMatcher": []
    },
    {
      "label": "frontend: dev (install if needed)",
      "type": "shell",
      "command": "cd frontend && npm install && npm run dev",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated", "group": "frontend" }
    },
    {
      "label": "frontend: kill :3000",
      "type": "shell",
      "command": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
      "problemMatcher": []
    },
    {
      "label": "run both (backend + frontend)",
      "dependsOn": [
        "backend: kill :8000",
        "frontend: kill :3000",
        "backend: first setup (venv + pip)",
        "backend: run (uvicorn with .env)",
        "frontend: dev (install if needed)"
      ],
      "dependsOrder": "sequence",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    }
  ]
}
